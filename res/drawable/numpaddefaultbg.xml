<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/transparent" />
            <stroke
                android:width="0dp"
                android:color="@color/transparent" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
       <layer-list >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/main_app_color" />

            <padding           android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <solid android:color="@color/transparent" />
        </shape>
    </item>
</layer-list>
    </item>
</selector>